<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:q="urn:import:com.qwertify.client.ui.widget">
	
	<ui:with field='res' type='com.qwertify.client.ui.resources.Resources'/>

	<ui:style>
		.container {
			text-align: left;
			width: 900px;
			margin: 0 auto;
		}
		
		.outerContainer {
			text-align: center;
		}
		
		.homeBar {
		    height: 50px;
		    background-color: #405774;
		    padding-top: 10px;    
		}
		
		.logoLink {
		}
		
		.logoLink:hover {
			opacity: 0.7;
		}
		
		.navBar {
		   height: 30px;
		   line-height: 30px;
		   background-color: #EDEFF4;
		   border-top: 1px solid #D8DFEA;
		   border-bottom: 1px solid #D8DFEA;
		   margin-bottom: 10px;
		   padding-top: 3px;
		   text-align: left;
		   display: none;
		}
		
		.navBar ul 
		{
		    list-style: none;
		    display: inline;
		}
		
		.navBar li 
		{
		    float: left;
		    margin-left: 6px;
		    margin-right: 6px;
		    font-weight: bold;
		}
		
		.navBar li a {
			
		}
		
		.currentTab a {
			padding-left: 10px;
			padding-right: 10px;
			line-height: 10px;
		}
		
		.tab {
			
		}
		
		.currentTab {
			background-color: white;
			border: solid 1px #D8DFEA;
			border-bottom: 0;
			padding: 5px;
			padding-left: 8px;
			padding-right: 8px;
			padding-bottom: 8px;
			color: #000;
		}
		
		.currentTab:hover {
			text-decoration: none;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel>
			<div class="{style.homeBar} {style.outerContainer}">
				<div class="{style.container}">
					<a class="{style.logoLink}" href="#">
						<q:Image resource="{res.logoImage}" altText="Qwertify Logo" />
					</a>
				</div>
			</div>
			<div class="{style.navBar} {style.container}">
				<ul>
					<li><a class="{style.currentTab}" href="#">All</a></li>
					<li><a href="#">grth</a></li>
				</ul>
			</div>
		</g:HTMLPanel>
		
		<div class="{style.container}">
			<g:SimplePanel ui:field="mainContentPanel"></g:SimplePanel>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder> 